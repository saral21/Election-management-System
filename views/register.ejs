<% include ./partials/header%>
<style>   
    Body {  
      font-family: Calibri, Helvetica, sans-serif;  
      background-color: rgb(242,249,254);
      
    } 
    .container {   
          margin-top:5%; 
          background-color: white;  
          left: 30%;
          width:35%;
      }   
    </style>
<div class="container" style="padding-top:30px;">
<div class="row">
<h1 style="text-align:center; color:black; font-weight:600">Sign Up</h1>
<div style="width:80% ;margin:25px auto">

<form action="/register" method="POST">

<div class="form-group"><input class="form-control" type="text"
name="username" id="username" placeholder="Username" required></div>

<div class="form-group"><input class="form-control" type="password"
name="password" id="password" placeholder="Password" required></div>

<div class="form-group"><input class="form-control" type="email"
name="email" id="email" placeholder="email" required></div>	

<div class="form-group"><input class="form control" type="number"
name="phoneno" id="phoneno" placeholder="phone number" required></div>

<div class="form-group"><input class="form-control" type="text"
name="adhaar" id="adhaar" placeholder="Adhaar number" required maxlength=12></div>

<div class="form-group"><button class="btn btn-lg btn-danger btn-block"
style="background-color:red;">Create</button></div> 

</form>
<a href="/login">Already an user? <strong>Login Here</strong></a> 
